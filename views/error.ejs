<div class="error-container">

  <div class="error-card">

    <div class="error-icon">
      <i class="fa-solid fa-triangle-exclamation"></i>
    </div>

    <h1><%= errorTitle || "Something went wrong" %></h1>

    <p class="error-message">
      <%= errorMessage || "An unexpected problem occurred." %>
    </p>

    <!-- SMART HELP SECTION -->
    <div class="error-help">

      <% if (errorType === "404") { %>
        <h3>Page Not Found</h3>
        <ul>
          <li>The page you tried to access does not exist.</li>
          <li>Check the address you entered.</li>
          <li>Return to the homepage and start again.</li>
        </ul>
      <% } %>

      <% if (errorType === "invalid_url") { %>
        <h3>Invalid Link</h3>
        <ul>
          <li>Please check the media link carefully.</li>
          <li>Make sure the link is public and accessible.</li>
          <li>Supported sources include standard YouTube video and playlist links.</li>
        </ul>
      <% } %>

      <% if (errorType === "private") { %>
        <h3>Private or Restricted Media</h3>
        <ul>
          <li>This media is not publicly accessible.</li>
          <li>Add account cookies from your profile and try again.</li>
          <li>Make sure you have permission to access the content.</li>
        </ul>
      <% } %>

      <% if (errorType === "processing") { %>
        <h3>Processing Failed</h3>
        <ul>
          <li>The download or conversion could not be completed.</li>
          <li>Try a different format or quality.</li>
          <li>Large files may take longer to prepare.</li>
        </ul>
      <% } %>

      <% if (errorType === "server") { %>
        <h3>Server Issue</h3>
        <ul>
          <li>The system encountered an internal problem.</li>
          <li>Please try again later.</li>
          <li>If the issue continues, restart the process from the homepage.</li>
        </ul>
      <% } %>

    </div>

    <div class="error-actions">
      <a href="/" class="btn-primary">
        <i class="fa-solid fa-house"></i> Go Home
      </a>
      <button onclick="history.back()" class="btn-secondary">
        <i class="fa-solid fa-arrow-left"></i> Go Back
      </button>
    </div>

  </div>

</div>

