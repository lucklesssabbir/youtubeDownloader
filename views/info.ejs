<!-- NAVBAR -->
<header class="navbar">

  <!-- LOGO / BRAND -->
  <div class="logo">
    <i class="fa-solid fa-play"></i> YouTube Downloader
  </div>

  <!-- NAV RIGHT: avatar + hamburger -->
  <div class="nav-right">

    <!-- USER AVATAR -->
    <a href="/profile">
      <img src="/img/default-user.png" class="nav-avatar" alt="User">
    </a>

    <!-- HAMBURGER MENU -->
    <button class="toggle-button"  onclick="toggleMenu()">
      <i class="fa-solid fa-bars "></i>
    </button>

    <!-- DROPDOWN MENU -->
    <div id="dropdown" class="dropdown">
      <a href="/"><i class="fa-solid fa-house"></i> Home</a>
      <a href="/"><i class="fa-brands fa-youtube"></i> YouTube Downloader</a>
      <a href="/convert"><i class="fa-solid fa-gear"></i> Convert</a>
      <a href="/profile"><i class="fa-solid fa-user"></i> Profile / Sign In</a>
    </div>

  </div>

</header>

<div class="info-container">

  <!-- Main Video Card -->
  <div class="video-card">
    <img src="<%= video.thumbnail %>" alt="Thumbnail" class="thumbnail">
    <h2 class="video-title"><%= video.title %></h2>
    <p class="video-duration">Duration: <%= video.duration %> sec</p>
  </div>

  <!-- Formats Button -->
  <div class="formats-container">
    <button id="load-formats">Show Available Formats</button>

    <!-- Format switch (hidden initially) -->
    <div id="format-switch" style="display: none;">
      <button class="format-btn active" data-type="video">Video</button>
      <button class="format-btn" data-type="audio">Audio</button>
    </div>

    <!-- Formats list -->
    <div id="formats-list" style="display: none;">
      <!-- dynamically populated with JS -->
    </div>
  </div>

  <!-- Loading Animation -->
  <div id="loading-spinner" style="display: none;">
    <div class="spinner"></div>
    <p>Loading formats...</p>
  </div>

  <!-- Start Processing -->
  <button id="start-processing" disabled>Start Processing</button>

</div>


